<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="120dp"
    android:padding="10dp"
    android:background="@color/health_knowledge_background" >

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="158dp"
        android:layout_height="106dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/_health_recuperate_item_01"
        android:contentDescription="@string/app_name" />
    
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivThumbnail"
        android:text="牛院长理论"
        android:textColor="@color/font_white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/ivThumbnail"
        android:lines="4"
        android:text="人秉大气的木气而生肝脏与胆腑.造化的木气,乃太阳射到地面的热,由秋季降人冬季,再由冬季水中,升出春季而成.人身的木气亦然.肝胆的体质,均在右.肝经的作用在左,胆经的作用在右.必胆经相火,由右降人下部水气之中,再由下左升,然后发生肝经"
        android:textColor="@color/font_white"
        android:textSize="15sp" />
    <Button 
        android:id="@+id/btnDetail"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/health_recuperate_detail_btn" />
</RelativeLayout>